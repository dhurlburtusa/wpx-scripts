{
	"name": "wpx/scripts",
	"description": "A set of scripts to help make using/managing a WordPress instance easier.",
	"keywords": [
		"library",
		"scripts",
		"WordPress"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Danny Hurlburt",
			"role": "Developer"
		}
	],
	"autoload": {
		"files": [
			"src/bootstrap.php"
		],
		"psr-4": {
			"Wpx\\Scripts\\v0\\": "src/"
		}
	},
	"bin": [
		"bin/wpx-scripts"
	],
	"support": {
		"issues": "https://github.com/dhurlburtusa/wpx-scripts/issues"
	},
	"require": {
		"php": "^5.6.20 || ^7"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.4",
		"squizlabs/php_codesniffer": "^3.5",
		"jakub-onderka/php-parallel-lint": "^1.0",
		"phpstan/phpstan": "^0.11.19"
	},
	"scripts": {
		"beautify": "phpcbf",
		"lint": [
			"@lint:php",
			"@lint:cs",
			"@lint:sa"
		],
		"lint:cs": "phpcs",
		"lint:php": "parallel-lint src",
		"lint:sa": "phpstan analyse --level 1 src",
		"test": "phpunit"
	}
}
